{% macro generalFields(bundle) %}
	{%- import '_includes/forms' as forms -%}
	
	{% if bundle.type.skuFormat and not bundle.id %}
	{{ forms.hidden({
		name: 'sku',
		value: ''
	}) }}
	{% else %}
	{{ forms.textField({
		id: 'sku',
		label: 'SKU' | t('commerce-bundles'),
		required: true,
		name: 'sku',
		value: bundle.sku,
		class: 'code',
		placeholder: 'Enter SKU' | t('commerce-bundles'),
		errors: bundle.getErrors('sku')
	}) }}
	{% endif %}
	
	{{ forms.textField({
		id: 'price',
		label: 'Price' | t('commerce-bundles')~' ('~craft.commerce.paymentCurrencies.primaryPaymentCurrency.iso|upper~')',
		required: true,
		name: 'price',
		value: (bundle.price == '0' ? '0' | number : (bundle.price ?  bundle.price | number ?: '')),
		placeholder: 'Enter price' | t('commerce-bundles'),
		errors: bundle.getErrors('price'),
	}) }}

{% endmacro %}

